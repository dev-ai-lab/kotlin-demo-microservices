{
  "info": {
    "name": "Shop User Service API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Signup",
      "request": {
        "method": "POST",
        "header": [{"key": "Content-Type", "value": "application/json"}],
        "url": {"raw": "{{baseUrl}}/api/v1/signup", "host": ["{{baseUrl}}"], "path": ["api", "v1", "signup"]},
        "body": {"mode": "raw", "raw": "{\n  \"username\": \"testuser\",\n  \"password\": \"testpass\"\n}"}
      }
    },
    {
      "name": "Login",
      "request": {
        "method": "POST",
        "header": [{"key": "Content-Type", "value": "application/json"}],
        "url": {"raw": "{{baseUrl}}/api/v1/login", "host": ["{{baseUrl}}"], "path": ["api", "v1", "login"]},
        "body": {"mode": "raw", "raw": "{\n  \"username\": \"testuser\",\n  \"password\": \"testpass\"\n}"}
      }
    },
    {
      "name": "Refresh Token",
      "request": {
        "method": "POST",
        "header": [{"key": "Content-Type", "value": "application/json"}],
        "url": {"raw": "{{baseUrl}}/api/v1/token/refresh", "host": ["{{baseUrl}}"], "path": ["api", "v1", "token", "refresh"]},
        "body": {"mode": "raw", "raw": "{\n  \"refreshToken\": \"<refresh_token>\",\n  \"userId\": \"<user_id>\"\n}"}
      }
    },
    {
      "name": "Get Profile",
      "request": {
        "method": "GET",
        "header": [{"key": "Authorization", "value": "Bearer <token>"}],
        "url": {"raw": "{{baseUrl}}/api/v1/profile", "host": ["{{baseUrl}}"], "path": ["api", "v1", "profile"]}
      }
    },
    {
      "name": "Create Profile",
      "request": {
        "method": "POST",
        "header": [{"key": "Authorization", "value": "Bearer <token>"}, {"key": "Content-Type", "value": "application/json"}],
        "url": {"raw": "{{baseUrl}}/api/v1/profile", "host": ["{{baseUrl}}"], "path": ["api", "v1", "profile"]},
        "body": {"mode": "raw", "raw": "{\n  \"firstname\": \"John\",\n  \"lastname\": \"Doe\"\n}"}
      }
    },
    {
      "name": "Update Profile",
      "request": {
        "method": "PUT",
        "header": [{"key": "Authorization", "value": "Bearer <token>"}, {"key": "Content-Type", "value": "application/json"}],
        "url": {"raw": "{{baseUrl}}/api/v1/profile", "host": ["{{baseUrl}}"], "path": ["api", "v1", "profile"]},
        "body": {"mode": "raw", "raw": "{\n  \"firstname\": \"Jane\",\n  \"lastname\": \"Smith\"\n}"}
      }
    },
    {
      "name": "Google OAuth Login",
      "request": {
        "method": "GET",
        "url": {"raw": "{{baseUrl}}/api/v1/google/login", "host": ["{{baseUrl}}"], "path": ["api", "v1", "google", "login"]}
      }
    },
    {
      "name": "Root",
      "request": {"method": "GET", "url": {"raw": "{{baseUrl}}/", "host": ["{{baseUrl}}"], "path": [""]}}
    },
    {
      "name": "Health",
      "request": {"method": "GET", "url": {"raw": "{{baseUrl}}/health", "host": ["{{baseUrl}}"], "path": ["health"]}}
    }
  ]
}

